! Makefile Lexing !

@[lexer.test.make]{
  :EN*/MakefileQ*"S -1 '
  :EN*/makefileQ*"S -1 '
  :EN*.makQ*
}

@[lexer.set.make]{
  ESSETILEXERmakefile
  :M[color.comment],1M[color.set]
  :M[color.preproc],2M[color.set]
  :M[color.variable],3M[color.set]
  :M[color.operator],4M[color.set]
  :M[color.target],5M[color.set]
  :M[color.error],6M[color.set]
}
